{% extends 'base.html.twig' %}

{% block title %}Tracks - {% endblock %}

{% block body %}
    <div class="container mb-5">
        <div class="row">
            <div class="main-title-container col-12 d-flex align-items-center justify-content-center">
                <h1 class="main-title">TRACK DETAILS</h1>
            </div>
        </div>

        <div class="mb-3">
            <a href="{{ path("app_track_index") }}">
                <button class="btn btn-danger">Back</button>
            </a>
        </div>

        <div class="card bg-primary bg-opacity-25 semitransparent mb-3 text-white">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{ asset("build/images/tracks/" ~ track.picture) }}"
                         class="img-fluid rounded-start img-ratio"
                         alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title mb-3">{{ track.title }}{% if track.artist %} - {{ track.artist }}{% endif %}</h3>
                        <h4 class="card-title">Difficulty</h4>
                        <p class="card-text">{{ track.difficulty }}/3</p>
                        <h4 class="card-title">Notes</h4>
                        <p class="card-text">{{ track.notes }}</p>
                        <h4 class="card-title">Keys</h4>
                        <p class="card-text">{{ track.letters }}</p>
                        <p class="card-text"><small class="text-muted">Created on PLACEHOLDER</small></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card bg-primary bg-opacity-25 semitransparent mb-3">
            <div class="row g-0" style="min-height: 10vh;">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ track.youtube }}?rel=0"
                            allowfullscreen></iframe>
                </div>
            </div>
        </div>


    </div>
{% endblock %}
