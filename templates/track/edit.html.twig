{% extends 'base.html.twig' %}

{% block title %}Edit track - {% endblock %}

{% block body %}
    <div class="container mb-5">
        <div class="row">
            <div class="main-title-container col-12 d-flex align-items-center justify-content-center">
                <h1 class="main-title user-select-none">EDIT TRACK</h1>
            </div>
        </div>

        <div class="mb-3">
            <a href="{{ path("app_track_show", {'id': track.id}) }}">
                <button class="btn btn-danger">Back</button>
            </a>
        </div>

        <div class="card bg-primary bg-opacity-25 semitransparent mb-3 text-white">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{ track.picture }}"
                         class="img-fluid rounded-start img-ratio"
                         alt="{{ track.title }} cover picture">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="container-fluid">
                            <div class="row d-flex justify-content-center">
                                <div class="col-10">
                                    <h3 class="card-title mb-3 text-center">{{ track.title }}{% if track.artist %} - {{ track.artist }}{% endif %}</h3>
                                    {{ include('track/_edit_form.html.twig') }}
                                    {{ include('track/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
