<div
        class="modal fade"
        id="notesModal"
        tabindex="-1"
        aria-labelledby="notesModalLabel"
        aria-hidden="true"
>
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content bg-primary bg-opacity-50 semitransparent pink-shadow text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="notesModalLabel">Notes info</h5>
                <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                ></button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                    <tr class="text-white">
                        <th scope="col">Note</th>
                        <th scope="col">Translation (FR)</th>
                        <th scope="col">Frequency (Hz)</th>
                        <th scope="col">Key</th>
                    </tr>
                    </thead>
                    <tbody class="text-white">
                    {% for note in notesService.getNotes() %}
                        <tr>
                            <td id="note-table-{{ loop.index }}-name">{{ note.name }}</td>
                            <td>{{ note.translation }}</td>
                            <td id="note-table-{{ loop.index }}-frequency">{{ note.frequency }}</td>
                            <td id="note-table-{{ loop.index }}-key">{{ note.letter|upper }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
